<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="45dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="6dp">

        <!-- Ngày dương lịch -->
        <TextView
            android:id="@+id/tvSolarDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <!-- Ngày âm lịch -->
        <TextView
            android:id="@+id/tvLunarDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="25/4"
            android:textSize="10sp"
            android:textColor="@color/text_secondary" />        <!-- Chỉ báo ngày lễ -->
        <View
            android:id="@+id/viewHolidayIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/circle_indicator"
            android:visibility="gone" />
            
        <!-- Chỉ báo có sự kiện -->
        <View
            android:id="@+id/viewEventIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/circle_event_indicator"
            android:visibility="gone" />

        <!-- Can Chi -->
        <TextView
            android:id="@+id/tvCanChi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Giáp Thìn"
            android:textSize="10sp"
            android:textColor="@color/accent_color"
            android:visibility="gone"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
